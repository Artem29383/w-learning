{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["config/@types", "node_modules/@types"],
    "paths": {
      "@/static/*": ["public/static/*"],
      "@/*": ["src/*"],
      "@/server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules",
    "server"
  ]
}
